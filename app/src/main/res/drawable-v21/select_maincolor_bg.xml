<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/ripple_material_light">//水波纹的颜色
    <item>
        <selector>
            <item android:state_enabled="true" android:state_pressed="false" android:state_selected="false">
                <color android:color="@color/maincolor"/>
            </item>
            <item android:state_enabled="true" android:state_pressed="true">
                <color android:color="@color/maincolor_press"/>
            </item>
            <item android:state_enabled="true" android:state_pressed="false" android:state_selected="true">
                <color android:color="@color/maincolor_press"/>
            </item>
            <item android:state_enabled="false">
                <color android:color="@color/btn_enable"></color>
            </item>
        </selector>
    </item>
</ripple>