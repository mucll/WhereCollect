<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dip_280"
    android:layout_height="@dimen/dip_240"
    android:background="@drawable/shape_white_r10dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/dip_18"
    android:paddingEnd="@dimen/dip_18">

    <TextView
        android:id="@+id/dialog_energy_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_20"
        android:text="20点能量\n已到账"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_28" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dip_40"
        android:src="@drawable/icon_more_energy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_energy_num_tv"
        android:layout_marginTop="@dimen/dip_14"
        android:text="高级会员多领60点能量"
        android:textColor="@color/maincolor"
        android:textSize="@dimen/f_13" />

    <TextView
        android:id="@+id/dialog_energy_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_44"
        android:layout_below="@id/dialog_energy_num_tv"
        android:text="能量值体系上线"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_4"
        android:layout_below="@id/dialog_energy_hint_tv"
        android:text="智能化功能全面升级中"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_13" />

    <TextView
        android:id="@+id/energy_i_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dip_10"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dip_6"
        android:text="知道了"
        android:textColor="@color/maincolor"
        android:textSize="@dimen/f_15" />
</RelativeLayout>
