<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_40"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_family_iv"
            android:layout_width="@dimen/dip_20"
            android:layout_height="@dimen/dip_20"
            android:layout_marginStart="@dimen/dip_8"
            android:scaleType="centerInside"
            android:src="@drawable/icon_family" />

        <TextView
            android:id="@+id/item_family_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:layout_marginStart="@dimen/dip_4"
            android:layout_marginEnd="@dimen/dip_8"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_15"
            tools:text="厨房" />


    </LinearLayout>

    <View
        android:id="@+id/split_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_marginStart="@dimen/dip_8"
        android:layout_marginEnd="@dimen/dip_8"
        android:background="@color/black_12" />

</RelativeLayout>