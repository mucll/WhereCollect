<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dip_300"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_r10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dip_16"
        android:layout_marginTop="@dimen/dip_24"
        android:layout_marginEnd="@dimen/dip_16"
        android:layout_marginBottom="@dimen/dip_16"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收哪儿隐私政策提醒"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_17" />

        <TextView
            android:id="@+id/privacy_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_12"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_15" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/split_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_48"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/privacy_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不同意并退出"
            android:textColor="@color/color555"
            android:textSize="@dimen/f_15" />

        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:background="@color/black_12" />

        <TextView
            android:id="@+id/privacy_submit_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/f_15" />
    </LinearLayout>
</LinearLayout>
