<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_80"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/dip_10"
    android:paddingEnd="@dimen/dip_10">

    <RatingBar
        android:id="@+id/goods_info_rb"
        style="@style/RadingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dip_8"
        android:layout_marginBottom="@dimen/dip_12"
        android:isIndicator="true"
        android:minHeight="16dp"
        android:stepSize="1"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/info_start_time_layout"
        android:layout_width="@dimen/dip_44"
        android:layout_height="@dimen/dip_40"
        android:layout_marginBottom="@dimen/dip_2"
        android:background="@drawable/shape_goods_info_tiem_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/info_year_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/f_11"
            tools:text="鞋柜" />

        <TextView
            android:id="@+id/info_time_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_14"
            tools:text="鞋柜" />
    </LinearLayout>


    <TextView
        android:id="@+id/goods_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dip_8"
        android:layout_marginBottom="@dimen/dip_10"
        android:ellipsize="start"
        android:singleLine="true"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_15"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="8个物品" />

    <TextView
        android:id="@+id/goods_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color999"
        android:textSize="@dimen/f_12"
        tools:text="鞋柜" />


</LinearLayout>