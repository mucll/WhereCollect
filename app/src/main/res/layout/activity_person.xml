                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dip_8"
                        android:gravity="center"
                        android:text="绑定手机"
                        android:textColor="@color/black_87"
                        android:textSize="@dimen/f_15" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/icon_next_black"
                        android:drawablePadding="@dimen/dip_16"
                        android:text="未绑定"
                        android:textColor="@color/black_87"
                        android:textSize="@dimen/f_15" />
                </RelativeLayout>

                <View
                    android:id="@+id/tv_changePWD_view"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="@dimen/dip_16"
                    android:background="@color/split_color" />

                <!--android:drawableLeft="@drawable/icon_a_pwd"-->
                <TextView
                    android:id="@+id/tv_changePWD"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_44"
                    android:background="@drawable/select_white_bg"
                    android:drawableRight="@drawable/icon_next_black"
                    android:drawablePadding="@dimen/dip_8"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dip_16"
                    android:paddingRight="@dimen/dip_16"
                    android:text="修改密码"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/f_15" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_loginOut"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_45"
                android:layout_marginLeft="@dimen/dip_36"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/dip_36"
                android:background="@drawable/select_changer_logout_btn_bg"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="@dimen/f_17" />

            <TextView
                android:id="@+id/version_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
