                        android:textColor="@color/black_87"
                        android:textSize="@dimen/f_15" />

                    <TextView
                        android:id="@+id/tv_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
