<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf9">

    <include layout="@layout/layout_activity_title_bar_all" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_hight"
        android:fillViewport="true"
        android:scrollbars="none">
        <!--android:layout_marginTop="@dimen/title_hight"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle">
            <!--头像-->
            <LinearLayout
                android:id="@+id/head_layout"
                style="@style/person_details_layout_style">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_4"
                    android:layout_marginRight="@dimen/dip_12"
                    android:src="@drawable/icon_my_tx" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dip_60"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="头像"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/f_16" />

                    <ImageView
                        android:id="@+id/person_iv"
                        android:layout_width="44dip"
                        android:layout_height="44dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dip_12"
                        android:src="@drawable/ic_user_error" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/split_color"/>
                </RelativeLayout>

            </LinearLayout>
            <!--昵称-->
            <LinearLayout
                android:id="@+id/nick_layout"
                style="@style/person_details_layout_style">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_4"
                    android:layout_marginRight="@dimen/dip_12"
                    android:src="@drawable/icon_my_nc" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dip_45"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="昵称"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/f_16" />

                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dip_16"
                        android:textColor="@color/black_87"
                        android:textSize="@dimen/f_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/split_color"/>
                </RelativeLayout>

            </LinearLayout>
            <!--性别-->
            <LinearLayout
                android:id="@+id/sex_layout"
                style="@style/person_details_layout_style">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_4"
                    android:layout_marginRight="@dimen/dip_12"
                    android:src="@drawable/icon_my_xb" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dip_45"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="性别"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/f_16" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dip_16"
                        android:textColor="@color/black_87"
                        android:textSize="@dimen/f_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/split_color"/>
                </RelativeLayout>

            </LinearLayout>
            <!--生日-->
            <LinearLayout
                android:id="@+id/birth_layout"
                style="@style/person_details_layout_style">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_4"
                    android:layout_marginRight="@dimen/dip_12"
                    android:src="@drawable/icon_my_sr" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dip_45"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="生日"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/f_16" />

                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dip_16"
                        android:textColor="@color/black_87"
