                <RelativeLayout
                    android:id="@+id/qq_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_44"
                    android:layout_weight="1"
                    android:background="@drawable/select_white_bg"
                    android:paddingLeft="@dimen/dip_16"
