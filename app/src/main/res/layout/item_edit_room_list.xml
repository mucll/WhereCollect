<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_76"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/dip_16"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:singleLine="true"
            android:text="厨房"
            android:textColor="@color/black_87"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/edit_room_move"
            android:layout_width="@dimen/dip_20"
            android:layout_height="@dimen/dip_20"
            android:layout_marginEnd="@dimen/dip_16"
            android:scaleType="center"
            android:src="@drawable/icon_tuozhuai" />

        <ImageView
            android:id="@+id/edit_room_del"
            android:layout_width="@dimen/dip_20"
            android:layout_height="@dimen/dip_20"
            android:layout_marginEnd="@dimen/dip_32"
            android:scaleType="centerInside"
            android:src="@drawable/icon_edit_room_del"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/edit_room_iv"
            android:layout_width="@dimen/dip_20"
            android:layout_height="@dimen/dip_20"
            android:layout_marginEnd="@dimen/dip_16"
            android:scaleType="centerInside"
            android:src="@drawable/icon_room_edit"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/edit_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dip_16"
            android:button="@drawable/checkbox_style"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/split_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_marginStart="@dimen/dip_24"
        android:background="@color/black_12" />

</RelativeLayout>