<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_goods_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/search_open_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_4"
        android:layout_marginBottom="@dimen/dip_4"
        android:background="@drawable/shape_white_split_r4dp"
        android:paddingStart="@dimen/dip_12"
        android:paddingTop="@dimen/dip_4"
        android:paddingEnd="@dimen/dip_12"
        android:paddingBottom="@dimen/dip_4"
        android:text="展开全部"
        android:textSize="@dimen/f_13" />
</LinearLayout>