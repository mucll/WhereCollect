<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".object.SelectSortChildNewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <include layout="@layout/layout_title_all" />

        <TextView
            android:id="@+id/main_sort_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_20"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/f_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dip_36"
            android:layout_marginTop="@dimen/dip_10"
            android:layout_marginEnd="@dimen/dip_36"
            android:layout_marginBottom="@dimen/dip_10"
            android:background="@color/split_color" />

        <TextView
            android:id="@+id/select_sort_child_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color555"
            android:textSize="@dimen/f_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dip_36"
            android:layout_marginTop="@dimen/dip_10"
            android:layout_marginEnd="@dimen/dip_36"
            android:layout_marginBottom="@dimen/dip_30"
            android:background="@color/split_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sort_one_list_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dip_36"
                android:layout_marginBottom="@dimen/dip_36"
                android:background="@color/split_color" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sort_two_list_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dip_36"
                android:layout_marginBottom="@dimen/dip_36"
                android:background="@color/split_color" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sort_three_list_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/add_sort_childe_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/add_sort_childe_submit_tv"
            android:layout_width="@dimen/dip_80"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/f_17" />

        <EditText
            android:id="@+id/add_sort_childe_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dip_16"
            android:layout_toStartOf="@id/add_sort_childe_submit_tv"
            android:background="@color/white"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/split_color" />
    </RelativeLayout>
</FrameLayout>