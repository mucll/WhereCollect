<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dip_300"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_r10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dip_16">

    <com.gongwu.wherecollect.view.MaxHeightScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pop_msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_17" />
        </FrameLayout>
    </com.gongwu.wherecollect.view.MaxHeightScrollView>

</LinearLayout>