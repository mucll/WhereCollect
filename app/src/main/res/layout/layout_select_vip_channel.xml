<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/select_changheader_btn_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_40"
                android:gravity="center"
                android:text="支付方式"
                android:textColor="@color/color999"
                android:textSize="@dimen/f_13" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_color" />

            <TextView
                android:id="@+id/wechat_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_50"
                android:drawableStart="@drawable/icon_wechat"
                android:drawablePadding="@dimen/dip_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dip_16"
                android:paddingEnd="@dimen/dip_16"
                android:text="微信支付"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_color" />

            <TextView
                android:id="@+id/alipay_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_50"
                android:drawableStart="@drawable/icon_alipay"
                android:drawablePadding="@dimen/dip_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dip_16"
                android:paddingEnd="@dimen/dip_16"
                android:text="支付宝"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_15" />

        </LinearLayout>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/select_changheader_btn_bg"
            android:gravity="center"
            android:text="取 消"
            android:textColor="@color/black_54"
            android:textScaleX="1.05"
            android:textSize="@dimen/f_15" />
    </LinearLayout>

</RelativeLayout>