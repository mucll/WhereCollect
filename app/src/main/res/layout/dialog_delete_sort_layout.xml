<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dip_280"
    android:layout_height="@dimen/dip_190"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_add_sort_dialog_top_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delete_sort_hint_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_delete_sort_child_text"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_17" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/split_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_48"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sort_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_add_sort_dialog_bottom_left_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/f_15" />

        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:background="@color/black_12" />

        <TextView
            android:id="@+id/sort_submit_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_add_sort_dialog_bottom_right_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/f_15" />
    </LinearLayout>
</LinearLayout>
