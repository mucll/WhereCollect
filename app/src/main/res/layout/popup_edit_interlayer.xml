<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dip_100"
    android:background="@drawable/home01_bg_card"
    android:orientation="vertical"
    android:paddingStart="@dimen/dip_20"
    android:paddingEnd="@dimen/dip_20">


    <TextView
        android:id="@+id/edit_furniture_name_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/pop_edit_furniture_name"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_17" />


    <TextView
        android:id="@+id/edit_interlayer_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/pop_edit_interlayer"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_17" />
</LinearLayout>