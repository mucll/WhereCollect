<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dip_400"
        android:layout_height="@dimen/dip_571"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_86"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/furniture_img_iv"
                android:layout_width="@dimen/dip_60"
                android:layout_height="@dimen/dip_60"
                android:layout_marginStart="@dimen/dip_10" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dip_10"
                android:layout_marginEnd="@dimen/dip_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/furniture_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/f_13"
                    tools:text="发现新版v2.0.1可以下载啦！" />

                <TextView
                    android:id="@+id/furniture_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_6"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/f_12"
                    tools:text="123个物品" />
            </LinearLayout>

            <ImageView
                android:id="@+id/code_img_iv"
                android:layout_width="@dimen/dip_60"
                android:layout_height="@dimen/dip_60"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dip_10" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/split_color" />

        <LinearLayout
            android:id="@+id/detailed_view_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/split_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_39"
            android:background="@color/split_color" />
    </LinearLayout>
</RelativeLayout>
