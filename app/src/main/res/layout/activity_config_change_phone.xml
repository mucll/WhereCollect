<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_all" />

    <EditText
        android:id="@+id/new_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:layout_marginStart="@dimen/dip_16"
        android:layout_marginTop="@dimen/dip_16"
        android:layout_marginEnd="@dimen/dip_16"
        android:background="@color/transparent"
        android:hint="新手机 "
        android:inputType="phone"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@color/black_87"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/split_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:layout_marginStart="@dimen/dip_16"
        android:layout_marginTop="@dimen/dip_8"
        android:layout_marginEnd="@dimen/dip_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/img_code_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/dip_50"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入图形验证码"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black_87"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_code_iv"
            android:layout_width="@dimen/dip_90"
            android:layout_height="@dimen/dip_30"
            android:scaleType="fitXY" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/split_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:layout_marginStart="@dimen/dip_16"
        android:layout_marginTop="@dimen/dip_8"
        android:layout_marginEnd="@dimen/dip_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="验证码"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black_87"
            android:textSize="16sp" />


        <Button
            android:id="@+id/send_bt"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/select_maincolor_r4_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/split_color" />

    <Button
        android:id="@+id/submit_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_48"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/select_maincolor_r4_bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="确 定"
        android:textColor="@color/white"
        android:textSize="@dimen/f_16" />

</LinearLayout>
