<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_70"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dip_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_family_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_17"
            tools:text="北京五环的房子" />

        <TextView
            android:id="@+id/item_family_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_4"
            android:textColor="@color/color999"
            android:textSize="@dimen/f_13"
            tools:text="3个房间 | 199件物品" />
    </LinearLayout>

    <ImageView
        android:id="@+id/go_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dip_16"
        android:src="@drawable/icon_next_black" />

    <TextView
        android:id="@+id/family_is_shared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dip_10"
        android:layout_toStartOf="@id/go_iv"
        android:text="@string/sharing"
        android:textColor="@color/maincolor"
        android:textSize="@dimen/f_12"
        android:visibility="gone" />

    <View
        android:id="@+id/split_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dip_16"
        android:background="@color/split_color" />

</RelativeLayout>