<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_all" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50"
            android:layout_marginStart="@dimen/dip_16"
            android:layout_marginTop="@dimen/dip_16"
            android:layout_marginEnd="@dimen/dip_16"
            android:background="@color/transparent"
            android:hint="邮箱"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black_87"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/split_color" />

        <EditText
            android:id="@+id/email_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50"
            android:layout_marginStart="@dimen/dip_16"
            android:layout_marginTop="@dimen/dip_16"
            android:layout_marginEnd="@dimen/dip_16"
            android:background="@color/transparent"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black_87"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/split_color" />
    </LinearLayout>

    <Button
        android:id="@+id/submit_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_48"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/select_maincolor_r4_bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="绑 定"
        android:textColor="@color/white"
        android:textSize="@dimen/f_16" />

</LinearLayout>
