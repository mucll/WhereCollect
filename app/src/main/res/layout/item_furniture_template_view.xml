<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_90"
    android:background="@color/white">

    <ImageView
        android:id="@+id/template_image"
        android:layout_width="@dimen/dip_50"
        android:layout_height="@dimen/dip_50"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dip_8"
        android:layout_marginBottom="@dimen/dip_4"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/template_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/template_image"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color999"
        android:textSize="@dimen/f_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/split_color" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/split_color" />
</RelativeLayout>