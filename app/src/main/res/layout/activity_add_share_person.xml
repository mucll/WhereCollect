<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_share_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.gongwu.wherecollect.activity.AddSharedPersonActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_48"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/add_share_back_btn"
            android:layout_width="@dimen/title_hight"
            android:layout_height="@dimen/title_hight"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/select_white_bg"
            android:paddingRight="4dp"
            android:src="@drawable/back_icon" />


        <TextView
            android:id="@+id/add_share_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/f_17" />

        <ImageButton
            android:id="@+id/add_share_scan_ib"
            android:layout_width="@dimen/title_hight"
            android:layout_height="@dimen/title_hight"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/select_white_bg"
            android:src="@drawable/icon_scanf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_28"
        android:layout_marginLeft="@dimen/dip_16"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/dip_16"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_serch_other_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/add_share_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/trans"
            android:hint="请输入共享人ID"
            android:imeOptions="actionSearch"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:textColor="@color/black_txt"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@color/trans"
            android:scaleType="fitXY"
            android:src="@drawable/icon_delete"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_share_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
