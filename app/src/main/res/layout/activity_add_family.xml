<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.AddFamilyActivity">

    <include layout="@layout/layout_title_all" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_add_family_bg" />

    <LinearLayout
        android:layout_width="@dimen/dip_240"
        android:layout_height="@dimen/dip_40"
        android:layout_marginTop="@dimen/dip_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/family_new_name_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dip_30"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|start"
            android:hint="@string/add_family_et_hint_text"
            android:imeOptions="actionDone"
            android:maxLength="8"
            android:singleLine="true"
            android:textColor="@color/black_87"
            android:textColorHint="@color/color999"
            android:textSize="@dimen/f_14"
            android:theme="@style/MyEditText" />

        <ImageView
            android:id="@+id/commit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_add_familygo" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dip_240"
        android:layout_height="1dp"
        android:background="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_4"
        android:text="起一个好听的名字，就可以开启收纳之旅啦"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_12" />
</LinearLayout>