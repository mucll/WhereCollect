<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:id="@+id/splash_one_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dip_76"
        android:src="@drawable/splash_icon_one" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_one_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dip_30"
        android:gravity="center">

        <ImageView
            android:id="@+id/splash_two_iv"
            android:layout_width="@dimen/dip_48"
            android:layout_height="@dimen/dip_48"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dip_10"
            android:src="@drawable/icon_app" />

        <ImageView
            android:id="@+id/splash_three_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/splash_two_iv"
            android:src="@drawable/splash_icon_two" />


    </RelativeLayout>

</RelativeLayout>