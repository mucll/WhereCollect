<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_50"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dip_10">

    <ImageView
        android:id="@+id/sort_child_type_iv"
        android:layout_width="@dimen/dip_20"
        android:layout_height="@dimen/dip_20"
        android:layout_marginStart="@dimen/dip_2"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/sort_child_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip_30"
        android:layout_marginStart="@dimen/dip_10"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color555"
        android:textSize="@dimen/f_15" />
</LinearLayout>