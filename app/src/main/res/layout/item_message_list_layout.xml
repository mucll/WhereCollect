<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dip_8"
    android:layout_marginLeft="@dimen/dip_16"
    android:layout_marginRight="@dimen/dip_16"
    android:layout_marginTop="@dimen/dip_8"
    android:background="@drawable/select_white_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_message_list"
        android:orientation="vertical"
        android:padding="@dimen/dip_16">

        <TextView
            android:id="@+id/msg_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_70"
            android:textSize="@dimen/f_16" />

        <TextView
            android:id="@+id/msg_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_8"
            android:textColor="@color/color999"
            android:textSize="@dimen/f_14" />
    </LinearLayout>
</FrameLayout>